---
import { useTranslation } from "../../i18n/utils";
import type { Sponsor } from "../../program/program";

interface Props {
  sponsors: Sponsor[];
}
const { sponsors } = Astro.props;

const t = useTranslation(Astro.url);
---

<div class="cont">
  <h2>{t("sponsors.title")}</h2>
  <div class="sponsors-container">
    {
      sponsors.map((sponsor) => (
        <a href={sponsor.url} target="_blank">
          <img src={sponsor.logo} alt={sponsor.name + " logo"} />
        </a>
      ))
    }
  </div>
  <a class="call-to-action" href="/sponsor">
    {t("sponsors.apply")}
    <img src="/arrow-up-right.svg" alt="arrow up right" />
  </a>
</div>

<style>
  .cont {
    color: #f1f1f1;
    padding: 6rem 2rem;

    h2 {
      font-size: 3.5rem;
      line-height: 4rem;
      text-align: center;
    }
  }

  .sponsors-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-items: center;
    margin: 6rem 0;
    gap: 1rem;

    a {
      max-width: 300px;

      img {
        width: 100%;
        height: auto;
      }
    }
  }

  .call-to-action {
    width: max-content;
    background-color: #12e8be;
    display: flex;
    gap: 1rem;
    color: #000;
    padding: 1rem 2rem;
    margin: 0 auto 2rem auto;
    border-radius: 4rem;
    border: 1px solid transparent;
  }
  .call-to-action:hover {
    /* border-color: #3f3f3f; */
    background-color: #3ff1ce;
  }

  @media only screen and (min-width: 768px) {
    .cont {
      h2 {
        font-size: 5rem;
        line-height: 2rem;
      }
    }
  }
</style>
